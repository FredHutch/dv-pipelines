{
    "title": "Monocle Preprocessing",
    "type": "object",
    "required": [
        "reductionMethod",
        "numDim",
        "normMethod"
    ],
    "properties": {
        "reductionMethod": {
            "type": "string",
            "title": "Reduction Method"
        },
        "numDim": {
            "type": "integer",
            "title": "Enter the Number of Dimensions"
        },
        "normMethod": {
            "title": "Select a Normalization Method",
            "type": "string",
            "enum": [
                "log",
                "size_only"
            ],
            "enumNames": [
                "log",
                "size_only"
            ]
        },
        "reducedims": {
            "title": "Monocle Reduce Dimensions",
            "type": "object",
            "required": [
                "reduceMethod",
                "preprocessMethod"
            ],
            "properties": {
                "reduceMethod": {
                    "title": "Select a Reduction Method",
                    "type": "string",
                    "enum": [
                        "UMAP",
                        "tSNE",
                        "PCA"
                    ],
                    "enumNames": [
                        "UMAP",
                        "tSNE",
                        "PCA"
                    ]
                },
                "preprocessMethod": {
                    "title": "Select a Reduction Method",
                    "type": "string",
                    "enum": [
                        "UMAP",
                        "tSNE",
                        "PCA"
                    ],
                    "enumNames": [
                        "UMAP",
                        "tSNE",
                        "PCA"
                    ]
                }
            }
        },
        "clustercells": {
            "title": "Monocle Cluster Cells",
            "type": "object",
            "required": [
                "clusterMethod",
                "k",
                "clusterNumber"
            ],
            "properties": {
                "clusterMethod": {
                    "title": "Select a Clustering Method",
                    "type": "string",
                    "enum": [
                        "louvain",
                        "leiden"
                    ],
                    "enumNames": [
                        "louvain",
                        "leiden"
                    ]
                },
                "k": {
                    "type": "integer",
                    "title": "Enter K"
                },
                "clusterNumber": {
                    "type": "integer",
                    "title": "cluster number"
                }
            }
        },
        "alignCDS": {
            "title": "Monocle Diff Expression",
            "type": "object",
            "required": [
                "numDims",
                "alignmentGroup",
                "preprocessMethod"
            ],
            "properties": {
                "numDims": {
                    "type": "integer",
                    "title": "Num Dims"
                },
                "alignmentGroup": {
                    "type": "string",
                    "title": "Alignment Group (Varible indicating batch info in colData)"
                },
                "preprocessMethod": {
                    "title": "Select a Preprocess Method",
                    "type": "string",
                    "enum": [
                        "PCA"
                    ],
                    "enumNames": [
                        "PCA"
                    ]
                }
            }
        }
    }
}
// Form Data
{
    "reductionMethod": "PCA",
    "numDim": 50,
    "normMethod": "log",
    "reducedims": {
        "reduceMethod": "UMAP",
        "preprocessMethod": "PCA"
    },
    "clustercells": {
        "clusterMethod": "louvain",
        "k": 20,
        "clusterNumber": 20
    },
    "alignCDS": {
        "numDims": 50,
        "alignmentGroup": "sample",
        "preprocessMethod": "PCA"
    }
}
